<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:orientation="vertical">

    <!-- BACK BUTTON -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="4dp"
            android:src="@drawable/ic_back"
            app:tint="?attr/iconTint" />
    </LinearLayout>

    <!-- TAB CHI TIÊU - THU NHẬP -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvExpenseTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chi tiêu"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvIncomeTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thu nhập"
            android:textColor="#777777"
            android:textSize="18sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- FILTER BAR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical">

        <!-- Wallet Filter Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipWalletFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_wallets"
            android:clickable="true"
            android:focusable="true"
            style="@style/Widget.MaterialComponents.Chip.Choice" />

        <!-- Time Filter Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTimeFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/this_month"
            android:layout_marginStart="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />
    </LinearLayout>

    <!-- TOTAL EXPENSE -->
    <TextView
        android:id="@+id/tvTotalExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-12,500,000 VND"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="12dp" />

    <!-- MAIN CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TITLE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thống kê chi tiêu theo tháng"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- BAR CHART -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChartExpense"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="12dp" />

            <!-- PIE TITLE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="So sánh các loại chi tiêu"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp" />

            <!-- PIE CHART -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartExpense"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAV -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="?attr/bottomNavBackgroundColor"
        app:itemTextColor="@color/selector_nav_color"
        app:menu="@menu/menu_bottom" />

</LinearLayout>
