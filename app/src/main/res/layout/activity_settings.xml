<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor">

    <!-- SCROLL CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- BACK -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="6dp"
                android:src="@drawable/ic_back"
                app:tint="?attr/iconTint" />

            <!-- TITLE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_settings"
                android:textSize="22sp"
                android:textColor="?attr/textColorPrimary"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp" />

            <!-- ========================== ITEM: NGÔN NGỮ ============================ -->
            <LinearLayout
                android:id="@+id/btnLanguage"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/cardBackgroundColor"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ngonngu"
                    app:tint="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/language"
                    android:textColor="?attr/textColorPrimary"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- ======================= ITEM: QUẢN LÝ THỂ LOẠI ======================= -->
            <LinearLayout
                android:id="@+id/btnCategory"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/cardBackgroundColor"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/theloai"
                    app:tint="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/manage_categories"
                    android:textColor="?attr/textColorPrimary"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- ======================= ITEM: GIAO DIỆN HỆ THỐNG ======================= -->
            <LinearLayout
                android:id="@+id/btnTheme"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/cardBackgroundColor"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/giaodien"
                    app:tint="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_theme_setting"
                    android:textColor="?attr/textColorPrimary"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- ============================ ITEM: BẠN BÈ ============================ -->
            <LinearLayout
                android:id="@+id/btnFriend"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/cardBackgroundColor"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/friend"
                    app:tint="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/friends"
                    android:textColor="?attr/textColorPrimary"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- ========================== ITEM: TÀI KHOẢN ========================== -->
            <LinearLayout
                android:id="@+id/btnAccount"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/cardBackgroundColor"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/taikhoan"
                    app:tint="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_account"
                    android:textColor="?attr/textColorPrimary"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- ========================== ITEM: THÔNG BÁO ========================== -->
            <LinearLayout
                android:id="@+id/btnNotification"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/cardBackgroundColor"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/thongbao"
                    app:tint="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notifications"
                    android:textColor="?attr/textColorPrimary"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/red_dot" />
            </LinearLayout>

            <!-- ========================== ITEM: ĐỒNG BỘ NGAY ========================== -->
            <LinearLayout
                android:id="@+id/btnSync"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/cardBackgroundColor"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_sync"
                    app:tint="?attr/iconTint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sync_now"
                    android:textColor="?attr/textColorPrimary"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- ========================== ITEM: ĐĂNG XUẤT ========================== -->
            <LinearLayout
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/cardBackgroundColor"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_lock"
                    app:tint="?attr/iconTint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logout"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- ========================= BOTTOM NAVIGATION ========================== -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="?attr/bottomNavBackgroundColor"
        app:menu="@menu/menu_bottom"
        app:itemIconTint="@color/selector_nav_color"
        app:itemTextColor="@color/selector_nav_color" />

</RelativeLayout>
