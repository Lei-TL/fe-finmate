<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor">

    <!-- ===================== TIÊU ĐỀ ===================== -->
    <TextView
        android:id="@+id/tvAddTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giao dịch mới"
        android:textColor="?attr/textColorPrimary"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"/>


    <!-- ===================== SCROLL CONTENT ===================== -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:layout_below="@id/tvAddTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- Chọn nhóm giao dịch -->
            <EditText
                android:id="@+id/etCategory"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Chọn nhóm giao dịch *"
                android:background="?attr/editTextBackground"
                android:padding="14dp"
                android:textColor="?attr/editTextColor"
                android:textColorHint="?attr/editTextColorHint"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:drawableTint="?attr/iconTint"
                android:layout_marginTop="16dp"/>

            <!-- Tên giao dịch -->
            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Tên giao dịch *"
                android:background="?attr/editTextBackground"
                android:padding="14dp"
                android:textColor="?attr/editTextColor"
                android:textColorHint="?attr/editTextColorHint"
                android:layout_marginTop="16dp"/>

            <!-- Số tiền -->
            <EditText
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Số tiền giao dịch *"
                android:background="?attr/editTextBackground"
                android:inputType="number"
                android:padding="14dp"
                android:textColor="?attr/editTextColor"
                android:textColorHint="?attr/editTextColorHint"
                android:layout_marginTop="16dp"/>

            <!-- Thêm bạn -->
            <EditText
                android:id="@+id/tvFriend"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Thêm bạn"
                android:background="?attr/editTextBackground"
                android:padding="14dp"
                android:textColor="?attr/editTextColor"
                android:textColorHint="?attr/editTextColorHint"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:drawableTint="?attr/iconTint"
                android:layout_marginTop="16dp"/>

            <!-- Đến hạn -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="?attr/editTextBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="14dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đến hạn"
                    android:textColor="?attr/textColorSecondary"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="?attr/iconTint"/>
            </LinearLayout>

            <!-- Ghi chú -->
            <EditText
                android:id="@+id/etNote"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Ghi chú"
                android:padding="14dp"
                android:background="?attr/editTextBackground"
                android:gravity="top"
                android:textColor="?attr/editTextColor"
                android:textColorHint="?attr/editTextColorHint"
                android:layout_marginTop="16dp"/>

            <!-- ==== BUTTONS ==== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="HỦY"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#E53935"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="24dp"
                    android:layout_height="1dp"/>

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="LƯU"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#3D5AFE"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
