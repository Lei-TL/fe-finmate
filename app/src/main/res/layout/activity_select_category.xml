<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor">

    <!-- ================= HEADER ================= -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_back"
            android:padding="4dp"
            android:contentDescription="Back"
            app:tint="?attr/iconTint"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/select_transaction_group"
            android:textColor="?attr/textColorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

        <ImageView
            android:id="@+id/btnMore"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_more"
            android:padding="4dp"
            android:contentDescription="More"
            app:tint="?attr/iconTint"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <!-- ================= TAB: CHI TIÊU / THU NHẬP ================= -->
    <LinearLayout
        android:id="@+id/tabContainer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/layoutHeader"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/tabExpense"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/expense"
            android:gravity="center"
            android:textColor="?attr/textColorPrimary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/tab_active_bg" />

        <TextView
            android:id="@+id/tabIncome"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/income"
            android:gravity="center"
            android:textColor="?attr/textColorSecondary"
            android:textSize="16sp"
            android:background="@drawable/tab_inactive_bg" />
    </LinearLayout>

    <!-- ================= RECYCLER VIEW CATEGORIES ================= -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/tabContainer"
        android:layout_above="@id/layoutAddNew"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="16dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_category_grid"
        tools:itemCount="12" />

    <!-- ================= ADD NEW CATEGORY BUTTON ================= -->
    <LinearLayout
        android:id="@+id/layoutAddNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp">

        <Button
            android:id="@+id/btnAddNewCategory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/add_new_category_group"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="?attr/buttonTextColor"
            android:background="?attr/buttonBackground" />
    </LinearLayout>

</RelativeLayout>
