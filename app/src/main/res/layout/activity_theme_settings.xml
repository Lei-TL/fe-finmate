<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor">

    <!-- ===== HEADER ===== -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- BACK BUTTON -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_back"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="?attr/iconTint" />

        <!-- TITLE -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_theme"
            android:textColor="?attr/textColorPrimary"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- ===== MAIN CONTENT ===== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ====== THEME: LIGHT ====== -->
            <LinearLayout
                android:id="@+id/btnLight"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_card"
                android:backgroundTint="?attr/cardBackgroundColor"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="24dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/sang"
                    app:tint="@null" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/light_theme"
                    android:textColor="?attr/textColorPrimary"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp" />

                <ImageView
                    android:id="@+id/ivLightCheck"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check"
                    android:visibility="gone"
                    app:tint="?attr/colorPrimary"/>
            </LinearLayout>

            <!-- ====== THEME: DARK ====== -->
            <LinearLayout
                android:id="@+id/btnDark"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_card"
                android:backgroundTint="?attr/cardBackgroundColor"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/toi"
                    app:tint="@null" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dark_theme"
                    android:textColor="?attr/textColorPrimary"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp" />

                <ImageView
                    android:id="@+id/ivDarkCheck"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check"
                    android:visibility="gone"
                    app:tint="?attr/colorPrimary"/>
            </LinearLayout>

            <!-- ====== THEME: SYSTEM ====== -->
            <LinearLayout
                android:id="@+id/btnSystem"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_card"
                android:backgroundTint="?attr/cardBackgroundColor"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_settings"
                    app:tint="?attr/iconTint" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/system_theme"
                    android:textColor="?attr/textColorPrimary"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp" />

                <ImageView
                    android:id="@+id/ivSystemCheck"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check"
                    android:visibility="gone"
                    app:tint="?attr/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
