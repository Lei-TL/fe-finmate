<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".ui.activities.HomeActivity">

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/backgroundColor"
    android:orientation="vertical">

    <!-- ====== HEADER NGƯỜI DÙNG + MENU 3 CHẤM ====== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_circle"
            android:padding="5dp"
            android:src="@drawable/taikhoan"
            android:clickable="true"
            android:focusable="true"
            app:tint="@null"/>

        <!-- Hello + Name -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/greeting"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="?attr/colorOnPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- MENU 3 CHẤM -->
        <ImageView
            android:id="@+id/btnMenuMore"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:padding="4dp"
            android:src="@drawable/ic_more_vertical"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- ====== FILTER BAR ====== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Time Filter Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTimeFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today"
                style="@style/Widget.MaterialComponents.Button.TextButton" />
        </LinearLayout>

        <!-- Filter Subtitle -->
        <TextView
            android:id="@+id/tvCurrentFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tháng 12/2025"
            android:textColor="?attr/textColorSecondary"
            android:textSize="12sp" />

        <!-- Sync Status -->
        <TextView
            android:id="@+id/tvSyncStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text=""
            android:textColor="?attr/textColorSecondary"
            android:textSize="11sp" />
    </LinearLayout>

    <!-- ====== SUMMARY CARDS ====== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingBottom="8dp">

        <!-- Balance Card -->
        <LinearLayout
            android:id="@+id/cardBalance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:backgroundTint="?attr/cardBackgroundColor"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_wallet"
                    app:tint="?attr/iconTint"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/balance"
                    android:textColor="?attr/textColorSecondary"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 VND"
                android:textColor="?attr/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tvBalanceSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_wallets"
                android:textColor="?attr/textColorSecondary"
                android:textSize="11sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Income Card -->
        <LinearLayout
            android:id="@+id/cardIncome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:backgroundTint="?attr/cardBackgroundColor"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_up"
                    app:tint="@color/green_500"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/income"
                    android:textColor="?attr/textColorSecondary"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 VND"
                android:textColor="?attr/textColorPositive"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tvIncomeSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trong tháng này"
                android:textColor="?attr/textColorSecondary"
                android:textSize="11sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Expense Card -->
        <LinearLayout
            android:id="@+id/cardExpense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:backgroundTint="?attr/cardBackgroundColor"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_down"
                    app:tint="@color/red_500"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expense"
                    android:textColor="?attr/textColorSecondary"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvExpense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 VND"
                android:textColor="?attr/textColorNegative"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tvExpenseSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trong tháng này"
                android:textColor="?attr/textColorSecondary"
                android:textSize="11sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chartContainer"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_card"
        android:backgroundTint="?attr/cardBackgroundColor"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/chart_title"
            android:textColor="?attr/textColorSecondary"
            android:textSize="14sp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- ====== DANH SÁCH GIAO DỊCH ====== -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="400dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTransactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="75dp"
            android:scrollbars="vertical"
            android:nestedScrollingEnabled="false" />

        <include
            android:id="@+id/layoutEmptyState"
            layout="@layout/layout_empty_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="400dp"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>

</androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="bottom"
        app:menu="@menu/menu_bottom"
        app:itemIconTint="@null"
        app:itemTextColor="@color/bottom_navigation_color"
        app:itemRippleColor="@android:color/transparent"
        android:background="?attr/bottomNavBackgroundColor"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
