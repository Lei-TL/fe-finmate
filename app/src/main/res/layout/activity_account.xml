<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#0F1624">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- BACK BUTTON -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_back"
            android:tint="#FFFFFF"
            android:padding="4dp" />

        <!-- AVATAR -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="16dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_avatar"
                android:background="@drawable/bg_circle_yellow"
                android:padding="10dp" />

            <ImageView
                android:id="@+id/btnCamera"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignRight="@id/imgAvatar"
                android:layout_alignBottom="@id/imgAvatar"
                android:src="@drawable/ic_camera"
                android:background="@drawable/bg_circle_white"
                android:padding="6dp" />
        </RelativeLayout>

        <!-- THU CHI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu nhập   +60,000,000 VND"
                android:textColor="#00FF00"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiêu     -10,000,000 VND"
                android:textColor="#FF4444"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số dư         +50,000,000 VND"
                android:textColor="#00FF00"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- TÊN -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:hint="Nhập tên" />

        <!-- EMAIL -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:hint="Nhập email" />

        <!-- NGÀY SINH -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày sinh"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_input"
            android:paddingHorizontal="12dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/edtBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:hint="30/08/2001"
                android:padding="0dp" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_calendar"
                android:tint="#FFFFFF" />
        </RelativeLayout>

        <!-- MÔ TẢ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả bản thân"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/edtNote"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:hint="Nhập mô tả..." />

        <!-- BẠN BÈ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn bè"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_friend1"
                android:background="@drawable/bg_circle_white"
                android:padding="4dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_friend2"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_circle_white"
                android:padding="4dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_friend3"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_circle_white"
                android:padding="4dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_more"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_circle_white"
                android:padding="10dp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
