<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HEADER: BACK & EDIT -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_back"
                app:tint="?attr/iconTint"
                android:padding="4dp"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_more"
                app:tint="?attr/iconTint"
                android:padding="4dp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <!-- AVATAR -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="16dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_avatar"
                android:background="@drawable/bg_circle_yellow"
                android:padding="10dp" />

            <ImageView
                android:id="@+id/btnCamera"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignRight="@id/imgAvatar"
                android:layout_alignBottom="@id/imgAvatar"
                android:src="@drawable/ic_camera"
                android:background="@drawable/bg_circle_white"
                android:padding="6dp" />
        </RelativeLayout>

        <!-- THU CHI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/income"
                    android:textColor="?attr/textColorPositive"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tvIncomeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 VND"
                    android:textColor="?attr/textColorPositive"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/expense"
                    android:textColor="?attr/textColorNegative"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tvExpenseValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 VND"
                    android:textColor="?attr/textColorNegative"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/balance"
                    android:textColor="?attr/textColorPositive"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tvBalanceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 VND"
                    android:textColor="?attr/textColorPositive"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- TÊN -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="?attr/textColorPrimary"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/editTextBackground"
            android:padding="12dp"
            android:textColor="?attr/editTextColor"
            android:textColorHint="?attr/editTextColorHint"
            android:hint="@string/enter_name_hint" />

        <!-- EMAIL -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textColor="?attr/textColorPrimary"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/editTextBackground"
            android:padding="12dp"
            android:textColor="?attr/editTextColor"
            android:textColorHint="?attr/editTextColorHint"
            android:hint="@string/enter_email_hint" />

        <!-- NGÀY SINH -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birthday"
            android:textColor="?attr/textColorPrimary"
            android:layout_marginTop="12dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/editTextBackground"
            android:paddingHorizontal="12dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/edtBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/editTextColor"
                android:textColorHint="?attr/editTextColorHint"
                android:background="@null"
                android:hint="30/08/2001"
                android:padding="0dp" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_calendar"
                app:tint="?attr/iconTint" />
        </RelativeLayout>

        <!-- MÔ TẢ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textColor="?attr/textColorPrimary"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/edtNote"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top"
            android:background="?attr/editTextBackground"
            android:padding="12dp"
            android:textColor="?attr/editTextColor"
            android:textColorHint="?attr/editTextColorHint"
            android:hint="@string/enter_description_hint" />

        <!-- NGÔN NGỮ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language"
            android:textColor="?attr/textColorPrimary"
            android:layout_marginTop="12dp" />

        <Spinner
            android:id="@+id/spnLanguage"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/editTextBackground"
            android:padding="12dp" />

        <!-- GIAO DIỆN -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theme"
            android:textColor="?attr/textColorPrimary"
            android:layout_marginTop="12dp" />

        <Spinner
            android:id="@+id/spnTheme"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?attr/editTextBackground"
            android:padding="12dp" />

        <!-- BẠN BÈ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friends"
            android:textColor="?attr/textColorPrimary"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_friend1"
                android:background="@drawable/bg_circle_white"
                android:padding="4dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_friend2"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_circle_white"
                android:padding="4dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_friend3"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_circle_white"
                android:padding="4dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_more"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_circle_white"
                android:padding="10dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_changes"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</ScrollView>
