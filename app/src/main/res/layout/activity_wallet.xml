<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:orientation="vertical">

    <!-- ====== FILTER BAR ====== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">

        <!-- Wallet Filter Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipWalletFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_wallets"
            android:clickable="true"
            android:focusable="true"
            style="@style/Widget.MaterialComponents.Chip.Choice" />

        <!-- Time Filter Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipTimeFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/this_month"
            android:clickable="true"
            android:focusable="true"
            style="@style/Widget.MaterialComponents.Chip.Choice" />
    </LinearLayout>

    <!-- ====== CARD VÍ TIỀN ====== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:background="@drawable/bg_card"
        android:backgroundTint="?attr/cardBackgroundColor"
        android:orientation="vertical">

        <!-- TIÊU ĐỀ + SỐ DƯ + ICON ADD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvWalletName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/my_account"
                android:textColor="?attr/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- Số dư -->
            <TextView
                android:id="@+id/tvBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero_balance"
                android:textColor="?attr/textColorPrimary"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <!-- Icon Add Transaction -->
            <ImageView
                android:id="@+id/btnAddTransaction"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_add"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                app:tint="?attr/textColorPrimary"/>
        </LinearLayout>

        <!-- Thu nhập -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/income"
            android:textColor="?attr/textColorPositive"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/progIncome"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="100"
            android:progressTint="#4CAF50"
            android:backgroundTint="?attr/progressBarBackgroundColor"/>

        <TextView
            android:id="@+id/tvIncomeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_income"
            android:textColor="?attr/textColorPositive"
            android:textSize="13sp"
            android:layout_marginBottom="12dp"/>

        <!-- Chi tiêu -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expense"
            android:textColor="?attr/textColorSecondary"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/progExpense"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="100"
            android:progressTint="#F44336"
            android:backgroundTint="?attr/progressBarBackgroundColor"/>

        <TextView
            android:id="@+id/tvExpenseValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_expense"
            android:textColor="?attr/textColorNegative"
            android:textSize="13sp"/>

    </LinearLayout>

    <!-- ====== DANH SÁCH GIAO DỊCH ====== -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- RecyclerView cho transactions -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTransactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="75dp" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/layoutEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_transactions"
                    android:textColor="?attr/textColorSecondary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/no_transactions_hint"
                    android:textColor="?attr/textColorSecondary"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- ====== BOTTOM NAV ====== -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="?attr/bottomNavBackgroundColor"
        app:menu="@menu/menu_bottom"
        app:itemTextColor="@color/selector_nav_color"/>

</LinearLayout>
